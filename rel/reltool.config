{sys, [
       {lib_dirs, ["../apps/", "../deps/"]},
       {rel, "macaba", "1",
        [
         kernel,
         stdlib,
         sasl,
         mcbd
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "macaba"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {app, sasl, [{incl_cond, include}]},
       {app, mcbd, [{incl_cond, include}]}
      ]}.

{target_dir, "macaba"}.

{overlay_vars, "vars.config"}.

{overlay, [
           {mkdir, "data/ring"},
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {template, "files/app.config", "etc/app.config"},
           {template, "files/macaba.config", "etc/macaba.config"},
           {template, "files/vm.args", "etc/vm.args"},
           {template, "files/macaba", "bin/macaba"},
           {template, "files/macaba-admin", "bin/macaba-admin"}
           ]}.
